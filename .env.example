# ================================
# Dental AI Chatbot - Environment Configuration
# ================================
#
# Copy this file to .env and configure your specific environment values
# Never commit .env files with real secrets to version control
#
# @version 1.0.0
# @author Dental AI Team

# ================================
# Application Configuration
# ================================

# Server Configuration
PORT=8000
NODE_ENV=development

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ================================
# Database Configuration
# ================================

# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=dental_ai
DB_USER=postgres
DB_PASSWORD=postgres

# Database Connection Pool
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=10000

# ================================
# Authentication & Security
# ================================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Password Hashing
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=60

# ================================
# AI & Language Model Configuration
# ================================

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini
USE_LLM=true

# Python Service Configuration
PY_SERVICE_URL=http://localhost:8001
PY_SERVICE_TIMEOUT=30000

# ================================
# Frontend Configuration (for Vite)
# ================================

# API Base URL for frontend
VITE_API_BASE=http://localhost:8000

# ================================
# Docker & Deployment Configuration
# ================================

# Adminer Configuration
ADMINER_PORT=8080

# Application Monitoring
HEALTH_CHECK_INTERVAL=30

# ================================
# Logging & Monitoring
# ================================

# Log Levels: error, warn, info, debug
LOG_LEVEL=info
LOG_FORMAT=combined

# External Monitoring
MONITORING_ENABLED=false
SENTRY_DSN=your-sentry-dsn-here

# ================================
# Feature Flags
# ================================

# Enable/disable features
ENABLE_REGISTRATION=true
ENABLE_CHAT_HISTORY=true
ENABLE_ANALYTICS=false

# ================================
# Development & Testing
# ================================

# Development Mode Settings
DEBUG_MODE=false
MOCK_EXTERNAL_APIS=false

# Testing Configuration
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5433/dental_ai_test

# ================================
# Production Notes
# ================================
#
# For production deployment:
# 1. Change all default passwords and secrets
# 2. Use strong, randomly generated values
# 3. Enable HTTPS and update CORS_ORIGINS
# 4. Configure proper monitoring and logging
# 5. Set NODE_ENV=production
# 6. Consider using environment-specific configs
#